{
  "plugins": ["prettier-plugin-twig-melody"],
  "overrides": [
    {
      "files": "*.twig",
      "options": {
        "parser": "melody"
      }
    }
  ],
  "printWidth": 80,
  "tabWidth": 2,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "proseWrap": "preserve",
  "singleQuote": true
}
