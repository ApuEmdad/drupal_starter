{{dump(content)}}
{% if content.field_bike_image %}
	{% set image_url =file_url(content.field_bike_image['#items'].entity.uri.value) %}
{% endif %}
<section class="mt-5 bg-danger bg-opacity-10 rounded p-4">
	<h1 class="text-center">Details Of Bike</h1>
	<div class="row row-cols-1  g-4 mt-3">
		<div class="col">
			<div class="card h-100 rounded-top-5">
				<div class="row">
					<div class="col-sm-6">
						<div class="card-body">
							<h5 class="card-title">{{content.field_bike_name}}</h5>
							<p class="card-text">
								{{content.field_bike_description}}
							</p>
							<div>
								<div class="colors d-flex gap-2 align-items-center">
									<label for="">Colors:</label>
									<div class="text-danger">{{content.field_bike_color}}</div>
								</div>
								<div class="variations d-flex align-items-center gap-2 mt-2">
									<label for="">Variations:</label>
									<span>{{content.field_bike_variation}}</span>
								</div>
							</div>
						</div>
						<div class="card-footer">
							<a href="../" class="btn btn-outline-danger">Go Back</a>
						</div>

					</div>
					<div class="col-sm-6">
						<img src="{{image_url}}" class="card-img-top" alt="...">
					</div>

				</div>

			</div>
		</div>
	</div>
</section>
